<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="stylesheet" href="../css/output.css" />

		<script src="/scripts/darkModeToggle.js" defer></script>
		<title>Register</title>
	</head>
	<body>
		<ul class="successMsg">
			<% if (typeof errors != 'undefined') { %> <% errors.forEach(error =>{ %>
			<li><%= error.message %></li>
			<% }) %> <% } %>
		</ul>

		<h1 class="nodeTitleH1 nodeMargins">Sign Up</h1>
		<div class="nodeInsideDiv nodeMargins">
			<form action="/users/register" method="POST">
				<div class="m-4">
					<input
						class="input"
						type="text"
						id="name"
						name="name"
						placeholder="Name"
						required />
				</div>
				<div class="m-4">
					<input
						class="input"
						type="email"
						id="email"
						name="email"
						placeholder="Email"
						required />
				</div>
				<div class="m-4">
					<input
						class="input"
						type="password"
						id="password"
						name="password"
						placeholder="Password"
						required />
				</div>
				<div class="m-4">
					<input
						class="input"
						type="password"
						id="password2"
						name="password2"
						placeholder="Confirm password"
						required />
				</div>
				<div class="m-4">
					<input type="submit" value="Register" class="input" />
				</div>
				<p class="m-4">
					Already have an account? Log in
					<a class="text-blue-6s00" href="/users/login">Here</a>
				</p>
			</form>
		</div>
	</body>
</html>
