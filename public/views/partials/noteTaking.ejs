<div class="nodeMargins mt-2 hidden relative" id="<%= noteMenuId %>">
	<div>
		<div class="noteNodeTitleH1">
			<div class="flex justify-between align-middle gap-1">
				<span>Create Note</span>
				<button onclick="toggleNoteMenu(`<%= noteMenuId %>`)">X</button>
			</div>
		</div>
		<div class="noteNodeInsideDiv">

			<form action="/users/bible" method="POST">
			<span class="text-yellow-600 flex justify-center">Highlight Verse</span>
				<div class="m-2 grid gap-2 grid-cols-6" id="userHighlights">
					<input type="hidden" name="verse_id" value="<%= verse_id %>">
					<input type="hidden" name="userHighlights" value="<%= userHighlights %>">

					<button value="bg-yellow-400" name="highlightColor" type="submit" class="bg-yellow-400 p-4 text-yellow-400 border border-yellow-500"></button>
					<button value="bg-purple-400" name="highlightColor" type="submit" class="bg-purple-400 p-4 text-purple-400 border border-purple-500"></button>
					<button value="bg-green-400" name="highlightColor" type="submit" class="bg-green-400 p-4 text-green-400 border border-green-500"></button>
					<button value="bg-blue-400" name="highlightColor" type="submit" class="bg-blue-400 p-4 text-blue-400 border border-blue-500"></button>
					<button value="bg-red-400" name="highlightColor" type="submit" class="bg-red-400 p-4 text-red-400 border border-red-500"></button>
					<button value="bg-orange-400" name="highlightColor" type="submit" class="bg-orange-400 p-4 text-orange-400 border border-orange-500"></button>
				</div>
			</form>

			<!-- <div class="m-1 grid gap-1 grid-cols-3">
				<button
					class="px-1 bg-gray-100 border border-gray-300 rounded-md active:bg-gray-200">
					<strong>B</strong>
				</button>
				<button
					class="px-1 bg-gray-100 border border-gray-300 rounded-md active:bg-gray-200">
					<i>Italics</i>
				</button>
				<button
					class="px-1 bg-gray-100 border border-gray-300 rounded-md active:bg-gray-200">
					<u>U</u>
				</button>
			</div> -->
			<form action="/users/bible" method="POST" class="grid gap-4">
				<label for="noteText"></label>
				<textarea
					type="text"
					id="noteText"
					name="noteText"
					placeholder="Insert text here."
					class="bg-yellow-200 border border-yellow-600 resize-none p-1 m-1 h-[120px] placeholder:text-yellow-600"
					required></textarea>

				<input type="hidden" name="verse_id" value="<%= verse_id %>">

				<input
				type="submit"
				value="Post Note"
				class="p-1 m-1 bg-gray-100 border border-gray-300 rounded-md active:bg-gray-200">
			</form>
		</div>
	</div>
</div>



